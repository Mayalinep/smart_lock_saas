# Base de données
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/smart_lock?schema=public"

# JWT
JWT_SECRET="your_super_secure_jwt_secret_here"
JWT_EXPIRES_IN="7d"

# Serveur
PORT=3000
NODE_ENV="development"

# Cookies
COOKIE_SECRET="votre_clé_cookie_secrète" 

# Redis (blacklist JWT, rate limit, cache)
REDIS_URL="redis://localhost:6379"

# Swagger (optionnel)
SWAGGER_ENABLED="true"

# SMTP (emails)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="user@example.com"
SMTP_PASS="password"
SMTP_SECURE="false" # true pour 465
SMTP_FROM="no-reply@smartlocks.local"