{
  "name": "smart-lock-saas-backend",
  "version": "1.0.0",
  "description": "Backend pour SaaS de gestion d'acc√®s digital aux logements",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "worker": "node scripts/worker.js",
    "test": "jest --runInBand",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "openapi:json": "node scripts/generate_openapi_json.js",
    "sdk:generate": "npm run openapi:json && openapi -i clients/sdk/openapi.json -o clients/sdk --client axios --useOptions --useUnionTypes"
  },
  "keywords": [
    "saas",
    "smart-lock",
    "access-control",
    "express",
    "prisma"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.6.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-slow-down": "^2.1.0",
    "helmet": "^7.2.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "nodemailer": "^6.9.13",
    "prom-client": "^14.2.0",
    "qrcode": "^1.5.4",
    "redis": "^5.8.0",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@tanstack/react-query": "^5.84.2",
    "axios": "^1.11.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.4",
    "nodemon": "^3.0.1",
    "openapi-typescript-codegen": "^0.25.0",
    "prisma": "^5.6.0",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "collectCoverageFrom": [
      "index.js",
      "src/**/*.js",
      "!src/docs/**",
      "!src/queues/**"
    ]
  }
